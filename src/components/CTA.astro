---
import { Button } from "@/components/ui/button";
import Newsletter from './Newsletter.astro';
---

<section class="py-24 bg-gradient-to-r from-brand-purple/20 to-brand-blue/20">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        Ready to speak your customers' language?
      </h2>
      <p class="text-lg md:text-xl mb-8 text-muted-foreground max-w-2xl mx-auto">
        Join thousands of companies using Legesher to connect with users worldwide in their native language.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12">
        <Button variant="default" size="lg">
          <a href="#">Start For Free</a>
        </Button>
        <Button variant="outline" size="lg">
          <a href="#">Schedule a Demo</a>
        </Button>
        <Button variant="secondary" size="lg">
          <a href="/docs">Read the Docs</a>
        </Button>
      </div>
      
      <div class="border-t pt-12">
        <h3 class="text-2xl font-semibold mb-6">Subscribe to our newsletter</h3>
        <p class="mb-6 text-muted-foreground">Get the latest updates on new features and language support.</p>
        <Newsletter />
      </div>
      
      <p class="mt-10 text-sm text-muted-foreground">
        No credit card required. Free plan includes 5,000 translations per month.
      </p>
    </div>
  </div>
</section>

<style>
  section {
    background: linear-gradient(135deg, hsl(var(--primary)/0.1), hsl(var(--primary)/0.2));
  }
</style> 